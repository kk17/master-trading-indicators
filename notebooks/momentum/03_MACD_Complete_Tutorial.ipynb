   "metadata": {},
   "outputs": [],
   "source": [
    "def detect_macd_divergence(data, fast_period=12, slow_period=26, signal_period=9, lookback=5):\n",
    "    \"\"\"\n",
    "    Detect MACD divergence patterns\n",
    "    \"\"\"\n",
    "    df = data.copy()\n",
    "    \n",
    "    # Calculate MACD\n",
    "    df['macd_line'], df['signal_line'], df['histogram'] = IndicatorCalculator.macd(\n",
    "        df['close'], fast_period, slow_period, signal_period\n",
    "    )\n",
    "    \n",
    "    # Find local minima and maxima\n",
    "    df['price_low'] = df['close'].rolling(window=lookback, center=True).min()\n",
    "    df['price_high'] = df['close'].rolling(window=lookback, center=True).max()\n",
    "    df['macd_low'] = df['macd_line'].rolling(window=lookback, center=True).min()\n",
    "    df['macd_high'] = df['macd_line'].rolling(window=lookback, center=True).max()\n",
    "    \n",
    "    # Detect divergences\n",
    "    df['bullish_divergence'] = False\n",
    "    df['bearish_divergence'] = False\n",
    "    \n",
    "    for i in range(lookback, len(df) - lookback):\n",
    "        # Bullish divergence: lower price low, higher MACD low\n",
    "        if (df['price_low'].iloc[i] < df['price_low'].iloc[i-lookback] and\n",
    "            df['macd_low'].iloc[i] > df['macd_low'].iloc[i-lookback]):\n",
    "            df.iloc[i, df.columns.get_loc('bullish_divergence')] = True\n",
    "        \n",
    "        # Bearish divergence: higher price high, lower MACD high\n",
    "        if (df['price_high'].iloc[i] > df['price_high'].iloc[i-lookback] and\n",
    "            df['macd_high'].iloc[i] < df['macd_high'].iloc[i-lookback]):\n",
    "            df.iloc[i, df.columns.get_loc('bearish_divergence')] = True\n",
    "    \n",
    "    # Generate signals\n",
    "    df['signal'] = 0\n",
    "    df.loc[df['bullish_divergence'], 'signal'] = 1\n",
    "    df.loc[df['bearish_divergence'], 'signal'] = -1\n",
    "    \n",
    "    return df\n",
    "\n",
    "# Apply strategy\n",
    "df_macd_div = detect_macd_divergence(df_manual)\n",
    "\n",
    "# Create signals DataFrame for backtesting\n",
    "macd_div_signals = pd.DataFrame(index=df_macd_div.index)\n",
    "macd_div_signals['signal'] = df_macd_div['signal']\n",
    "\n",
    "print(f\"Bullish divergences detected: {df_macd_div['bullish_divergence'].sum()}\")\n",
    "print(f\"Bearish divergences detected: {df_macd_div['bearish_divergence'].sum()}\")\n",
    "\n",
    "# Plot divergences\n",
    "plt.figure(figsize=(15, 10))\n",
    "\n",
    "plt.subplot(2, 1, 1)\n",
    "plt.plot(df_macd_div.index, df_macd_div['close'], label='Price', alpha=0.7, color='black')\n",
    "plt.scatter(df_macd_div[df_macd_div['bullish_divergence']].index, \n",
    "            df_macd_div[df_macd_div['bullish_divergence']]['close'], \n",
    "            color='green', s=100, marker='^', label='Bullish Divergence', zorder=5)\n",
    "plt.scatter(df_macd_div[df_macd_div['bearish_divergence']].index, \n",
