    "def calculate_ema(data, period):\n",
    "    \"\"\"\n",
    "    Calculate Exponential Moving Average\n",
    "    \"\"\"\n",
    "    return data.ewm(span=period, adjust=False).mean()\n",
    "\n",
    "def calculate_macd_manual(data, fast_period=12, slow_period=26, signal_period=9):\n",
    "    \"\"\"\n",
    "    Calculate MACD manually\n",
    "    \"\"\"\n",
    "    df = data.copy()\n",
    "    \n",
    "    # Calculate EMAs\n",
    "    df['ema_fast'] = calculate_ema(df['close'], fast_period)\n",
    "    df['ema_slow'] = calculate_ema(df['close'], slow_period)\n",
    "    \n",
    "    # Calculate MACD line\n",
    "    df['macd_line'] = df['ema_fast'] - df['ema_slow']\n",
    "    \n",
    "    # Calculate signal line\n",
    "    df['signal_line'] = calculate_ema(df['macd_line'], signal_period)\n",
    "    \n",
    "    # Calculate histogram\n",
    "    df['histogram'] = df['macd_line'] - df['signal_line']\n",
    "    \n",
    "    return df[['macd_line', 'signal_line', 'histogram']]\n",
    "\n",
    "# Calculate MACD manually\n",
    "df_manual = df.copy()\n",
    "macd_manual = calculate_macd_manual(df_manual, fast_period=12, slow_period=26, signal_period=9)\n",
    "df_manual['macd_line'] = macd_manual['macd_line']\n",
    "df_manual['signal_line'] = macd_manual['signal_line']\n",
    "df_manual['histogram'] = macd_manual['histogram']\n",
    "\n",
    "print(\"MACD calculated manually:\")\n",
    "display(df_manual[['close', 'macd_line', 'signal_line', 'histogram']].tail(10))\n",
    "\n",
    "# Let's verify the calculation manually\n",
    "print(\"\\nManual verification of MACD for the last row:\")\n",
    "print(f\"Current Price: {df_manual['close'].iloc[-1]:.2f}\")\n",
    "print(f\"12-period EMA: {df_manual['ema_fast'].iloc[-1]:.2f}\")\n",
    "print(f\"26-period EMA: {df_manual['ema_slow'].iloc[-1]:.2f}\")\n",
    "print(f\"MACD Line: {df_manual['macd_line'].iloc[-1]:.4f}\")\n",
    "print(f\"Signal Line: {df_manual['signal_line'].iloc[-1]:.4f}\")\n",
    "print(f\"Histogram: {df_manual['histogram'].iloc[-1]:.4f}\")"
