    ")\n",
    "\n",
    "# Sell signals\n",
    "sell_signals = df_macd_cross[df_macd_cross['bearish_cross']]\n",
    "fig.add_trace(\n",
    "    go.Scatter(\n",
    "        x=sell_signals.index,\n",
    "        y=sell_signals['close'],\n",
    "        mode='markers',\n",
